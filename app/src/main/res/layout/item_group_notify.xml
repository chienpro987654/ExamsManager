<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title_notify"
        android:textStyle="bold"
        android:text="Just need some text to test this text view"
        android:textSize="16sp"
        android:maxLines="1"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_marginStart="@dimen/margin_base"
        app:layout_constraintEnd_toStartOf="@+id/img_red_dot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_red_dot"
        android:background="@drawable/red_dot"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/tv_grade_notify"
        android:text="NT118.M11"
        android:textSize="14sp"
        android:layout_marginStart="@dimen/margin_base"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_notify"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/tv_date_notify"
        android:text="30/12/2021"
        android:textSize="14sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_notify"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"/>



</androidx.constraintlayout.widget.ConstraintLayout>