<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/main_header_selector_edit_question">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_logo_edit_question"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp">

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/shape_logo">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/logo"/>
        </FrameLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App trắc nghiệm\n số 1 Việt Nam"

        android:textSize="@dimen/text_large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/linear_layout_logo_edit_question"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_set_edit_question_header"
        android:text="Tên bộ câu hỏi: "
        app:layout_constraintTop_toBottomOf="@id/linear_layout_logo_edit_question"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tv_quantity_set_edit_question_header"
    android:text="Số lượng câu hỏi: "
    app:layout_constraintTop_toBottomOf="@id/tv_name_set_edit_question_header"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_margin="5dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>